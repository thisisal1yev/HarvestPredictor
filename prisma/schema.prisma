generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("farmer")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  farms        Farm[]
}

model Farm {
  id        String   @id @default(cuid())
  name      String
  location  String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fields    Field[]
}

model Field {
  id        String   @id @default(cuid())
  name      String
  area      Float?
  cropType  String?
  farmId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  farm      Farm     @relation(fields: [farmId], references: [id], onDelete: Cascade)
  seasons       Season[]
  sensorDevices SensorDevice[]
  droneFlights  DroneFlight[]
  recommendations Recommendation[]
  alerts        Alert[]
}

model Season {
  id        String    @id @default(cuid())
  year      Int
  crop      String
  startDate DateTime?
  endDate   DateTime?
  notes     String?
  fieldId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  field     Field     @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  yieldRecords  YieldRecord[]
  predictions   Prediction[]
  recommendations Recommendation[]
}

model SensorDevice {
  id        String   @id @default(cuid())
  name      String
  type      String
  fieldId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  field     Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  readings  SensorReading[]
}

model SensorReading {
  id             String       @id @default(cuid())
  timestamp      DateTime
  moisture       Float?
  nitrogen       Float?
  phosphorus     Float?
  potassium      Float?
  temperature    Float?
  pH             Float?
  sensorDeviceId String
  createdAt      DateTime     @default(now())
  sensorDevice   SensorDevice @relation(fields: [sensorDeviceId], references: [id], onDelete: Cascade)
}

model DroneFlight {
  id        String   @id @default(cuid())
  date      DateTime
  altitude  Float?
  notes     String?
  fieldId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  field     Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  vegetationPoints VegetationIndexPoint[]
}

model VegetationIndexPoint {
  id            String      @id @default(cuid())
  timestamp     DateTime
  ndvi          Float
  evi           Float?
  lat           Float?
  lng           Float?
  droneFlightId String
  createdAt     DateTime    @default(now())
  droneFlight   DroneFlight @relation(fields: [droneFlightId], references: [id], onDelete: Cascade)
}

model YieldRecord {
  id          String    @id @default(cuid())
  yieldValue  Float
  unit        String    @default("t/ha")
  harvestDate DateTime?
  seasonId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  season      Season    @relation(fields: [seasonId], references: [id], onDelete: Cascade)
}

model Prediction {
  id             String   @id @default(cuid())
  predictedYield Float
  confidence     Float?
  modelVersion   String   @default("mlr-v1")
  seasonId       String
  createdAt      DateTime @default(now())
  season         Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
}

model Recommendation {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String
  priority    String   @default("medium")
  payload     Json?
  fieldId     String
  seasonId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  field       Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  season      Season?  @relation(fields: [seasonId], references: [id], onDelete: SetNull)
}

model Alert {
  id          String   @id @default(cuid())
  rule        String
  message     String
  status      String   @default("active")
  severity    String   @default("warning")
  fieldId     String
  triggeredAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  field       Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade)
}
